<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      >
    <com.tencent.qcloud.ui.CircleImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/add"
        android:src="@mipmap/add_icon"
        />
  </LinearLayout>
  <android.support.design.widget.TextInputLayout
      android:id="@+id/name_ly"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="4dp"
      >
    <EditText
        android:id="@+id/app_name"
        android:layout_width="match_parent"
        android:textSize="14dp"
        android:layout_height="wrap_content"
        android:hint="微应用名字"
        ></EditText>

  </android.support.design.widget.TextInputLayout>
  <android.support.design.widget.TextInputLayout
      android:id="@+id/app_des_ly"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="4dp"
      >
    <EditText
        android:id="@+id/app_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:hint="微应用介绍"
        ></EditText>

  </android.support.design.widget.TextInputLayout>
  <android.support.design.widget.TextInputLayout
      android:id="@+id/app_path_ly"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="4dp"
      >
    <EditText
        android:id="@+id/app_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:hint="微应用网址比如:baidu.com"
        ></EditText>

  </android.support.design.widget.TextInputLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="8dp"
            android:layout_height="60dp">
      <CheckBox
          android:id="@+id/check_update"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:checked="true"
          android:layout_height="wrap_content"
          android:text="上传微应用"
          />
      <LinearLayout
          android:layout_width="0dp"
          android:layout_weight="1"
          android:gravity="right"
          android:layout_height="wrap_content"
          >
        <CheckBox
            android:id="@+id/check_fast_run"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创建快捷方式"
            />
      </LinearLayout>


    </LinearLayout>

</LinearLayout>